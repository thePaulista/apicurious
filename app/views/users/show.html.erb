<h2><%= current_user.nickname %>'s Github </h2>

<%= image_tag current_user.avatar_url, size:"100x100" %>

<ul>
  <li>Followers: <%= @github_user.lookup_followers.count %></li>
  <li>Following:<%= @github_user.lookup_following.count %></li>
<li>Starred: <%= @github_user.lookup_starred.count %></li>
  <% if @github_user.lookup_organizations == [] %>
    <%= "#{current_user.nickname} does not belong to any organization" %> 
    <% else %>
  <li>Organizations: <%= @github_user.lookup_organizations %></li>
  <% end %>
</ul>

<h4>Repositories</h4>
<% @github_user.lookup_repos.map do |repo| %>
  <%= link_to repo[:name], repo[:html_url] %> <br>
<% end %>

<h4>Recent Events</h4>
<% @github_user.lookup_events.map do |event| %>
  <%= event %>
<% end %>

<h4>Received Events</h4>
<% @github_user.lookup_received_events.map do | event| %>
 <%= event[:body] %> 
<% end %>

